          "cloud",
          "kubernetes"
        ],
        "intentPatterns": [
          "(create|setup|provision).*?(infrastructure|aws|vpc|eks|rds)",
          "(design|architect).*?(network|infrastructure|cloud)",
          "(deploy|configure).*?(terraform|cdk|cloudformation)",
          "(optimize|reduce).*?cost",
          "(secure|harden|protect).*?(infrastructure|aws)"
        ]
      },
      "fileTriggers": {
        "pathPatterns": [
          "**/*.tf",
          "**/terraform/**/*",
          "**/cdk/**/*.ts",
          "**/infrastructure/**/*",
          "**/*.yaml",
          "**/*.yml"
        ],
        "pathExclusions": [
          "**/node_modules/**",
          "**/.terraform/**"
        ],
        "contentPatterns": [
          "resource \"aws_",
          "provider \"aws\"",
          "module \"",
          "terraform {",
          "from aws_cdk",
          "AWS::",
          "apiVersion:.*apps/v1"
        ]
      }
    }
  },
