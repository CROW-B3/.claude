{
  "version": "2.0",
  "description": "Multi-technology skill activation rules for AWS Data Lake platform with Python, Go, Next.js, and infrastructure as code",
  "skills": {
    "python-data-engineering": {
      "type": "domain",
      "enforcement": "suggest",
      "priority": "high",
      "description": "Python data engineering with PySpark, Pandas, Airflow, AWS Glue, and ETL pipelines",
      "promptTriggers": {
        "keywords": [
          "python",
          "pyspark",
          "pandas",
          "airflow",
          "dag",
          "glue",
          "etl",
          "pipeline",
          "data processing",
          "spark",
          "emr",
          "fastapi",
          "data validation",
          "great expectations",
          "streaming",
          "kafka",
          "kinesis"
        ],
        "intentPatterns": [
          "(create|build|implement|design).*?(pipeline|etl|dag|data.*?flow)",
          "(process|transform|clean).*?data",
          "(optimize|tune|improve).*?(spark|pyspark|pipeline)",
          "(how to|best practice).*?(airflow|pyspark|pandas|glue)",
          "(debug|fix|troubleshoot).*?(pipeline|dag|spark.*?job)"
        ]
      },
      "fileTriggers": {
        "pathPatterns": [
          "**/*.py",
          "**/airflow/dags/**/*.py",
          "**/glue/**/*.py",
          "**/spark/**/*.py",
          "**/etl/**/*.py",
          "**/data-engineering/**/*.py",
          "**/pipelines/**/*.py"
        ],
        "pathExclusions": [
          "**/*.test.py",
          "**/*_test.py",
          "**/tests/**"
        ],
        "contentPatterns": [
          "from pyspark",
          "import pandas",
          "from airflow",
          "SparkSession",
          "@dag\\(",
          "GlueContext",
          "from fastapi"
        ]
      }
    },
    "go-microservices": {
      "type": "domain",
      "enforcement": "suggest",
      "priority": "high",
      "description": "Go microservices with clean architecture, gRPC, Gin/Echo, and cloud-native patterns",
      "promptTriggers": {
        "keywords": [
          "golang",
          "go service",
          "microservice",
          "grpc",
          "gin",
          "echo",
          "fiber",
          "api",
          "rest api",
          "backend",
          "concurrency",
          "goroutine",
          "channel",
          "clean architecture",
          "dependency injection"
        ],
        "intentPatterns": [
          "(create|build|implement).*?(service|microservice|api|grpc)",
          "(refactor|restructure).*?(go|golang|architecture)",
          "(optimize|improve).*?(performance|concurrency|go.*?code)",
          "(how to|best practice).*?(go|golang|grpc|gin)",
          "(handle|implement).*?(error|context|concurrent)"
        ]
      },
      "fileTriggers": {
        "pathPatterns": [
          "**/*.go",
          "**/go.mod",
          "**/go.sum",
          "**/proto/**/*.proto"
        ],
        "pathExclusions": [
          "**/*_test.go",
          "**/vendor/**"
        ],
        "contentPatterns": [
          "package main",
          "func main\\(",
          "import.*gin",
          "import.*echo",
          "import.*grpc",
          "go func\\(",
          "make\\(chan"
        ]
      }
    },
    "nextjs-development": {
      "type": "domain",
      "enforcement": "suggest",
      "priority": "high",
      "description": "Next.js 14+ with App Router, React Server Components, Server Actions, and modern frontend patterns",
      "promptTriggers": {
        "keywords": [
          "nextjs",
          "next.js",
          "app router",
          "server component",
          "client component",
          "server action",
          "react",
          "typescript",
          "frontend",
          "ui component",
          "tailwind",
          "shadcn",
          "tanstack query",
          "metadata",
          "seo"
        ],
        "intentPatterns": [
          "(create|build|implement).*?(component|page|route|api.*?route)",
          "(setup|configure|implement).*?(nextjs|app.*?router|authentication)",
          "(optimize|improve).*?(performance|seo|loading)",
          "(how to|best practice).*?(nextjs|server.*?component|app.*?router)",
          "(fetch|query|mutate).*?data"
        ]
      },
      "fileTriggers": {
        "pathPatterns": [
          "app/**/*.tsx",
          "app/**/*.ts",
          "components/**/*.tsx",
          "lib/**/*.ts",
          "**/next.config.js",
          "**/next.config.mjs"
        ],
        "pathExclusions": [
          "**/*.test.tsx",
          "**/*.test.ts",
          "**/*.spec.tsx"
        ],
        "contentPatterns": [
          "'use client'",
          "'use server'",
          "export default async function",
          "import.*next/",
          "from '@tanstack/react-query'",
          "useRouter.*from.*next/navigation"
        ]
      }
    },
